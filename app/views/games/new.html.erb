<div class="container">
<h1>New Game</h1>

 <% @letters.each do |letter| %>
  <div class="btn btn-info"> <%= letter.upcase%> </div>
  <% end %>

<h4>What is the longest word you can find?</h4>
  <div class="form-group">
  <form action="score">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <!-- es el nombre del método a correr, a acción en el controller -->
  <input type="text" name="word" placeholder="Write a word">
  <!-- name es el nombre del parámetro -->
  <input type="submit" value="Play" class="btn btn-primary">
</div>
</form>
</div>
